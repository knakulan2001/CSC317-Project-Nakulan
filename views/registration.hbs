<link rel="stylesheet" type="text/css" href="/public/css/registration.css">
<head><script defer type="text/javascript" src="/public/js/FormValidation.js"></script></head>
<div class="registration-box">
    <h1>Registration Page</h1>
    <p>Please fill out this form in order to create an account.</p>
    <br>

    <form action="/users/registration" method="POST" id="submit-form">
        <div class="user-box">
            <input type="username" name="username" id="username" placeholder=""
                required>
            <label for="username">Username</label>
        </div>

        <div class="user-box">
            <input type="email" name="email" id="email" placeholder="" required>
            <label for="email">E-mail</label>
        </div>

        <div class="user-box">
            <input type="password" name="password" id="password" placeholder=""
                required>
            <label for="password">Password</label>
        </div>

        <div class="user-box">
            <input type="password" name="repeatpassword" id="repeatpassword"
                placeholder="" required>
            <label for="repeatpassword">Confirm Password</label>
        </div>

        <input type="checkbox" id="age" name="age" value="13+ Year of
            Age" required="true">
        <label for="age">&nbsp;&nbsp;I am 13 year of age or older</label>
        <br><br><br>

        <input type="checkbox" id="TermsOfService" name="TermsOfService"
            value="TermsOfService and Privacy Rules" required="true">
        <label for="tos">&nbsp;&nbsp;I accept
            <a
                href="https://www.latlmes.com/breaking/your-sensational-news-headline-here-1">
                Terms of Service and Privacy Rules</a></label>
        <br><br>

        <button id="register" type="submit">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            Register
        </button>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <button id="cancel" type="reset">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            Cancel
        </button>
    </form>
</div>
